<Page x:Class="Team_Project.Resumes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Team_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Resumes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="dataGridStations" Grid.Row="1" Grid.ColumnSpan="2" Margin="5"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Name" Binding="{Binding }"/>
                <DataGridTextColumn Width="*" Header="Commentary" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Button Width="100" Margin="0,5,5,5" Click="ButtonAddResume_Click" HorizontalAlignment="Right">Add</Button>
            <Button Width="100" Margin="5" Click="ButtonRemoveResume_Click">Remove</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top">

            <Button Width="100" Margin="5" Click="ButtonOk_Click">Ok</Button>
            <Button Width="100" Margin="5" Click="ButtonCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Page>
